pipeline {
    agent any

    stages {
        stage('Run Juiceshop') {
            steps {
                sh 'docker-compose up -d'    
            }
        }
        stage('Run OWASP ZAP image') {
            steps {
                sh 'docker pull owasp/zap2docker-stable'

                echo 'first check pull, than run'

                sh 'docker run -p 8081:8081 -t owasp/zap2docker-weekly zap-baseline.py -t http://172.18.0.1:3000 -r testreport.html || exit 0'
            }
        }
        stage('Run Defectdojo as service'){
            steps {
                echo 'Hier moet dan iets komen voor defectdojo'
            }
        }
    }
}